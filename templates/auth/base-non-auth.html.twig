<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>ShopMe</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    {# Font Awesome #}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

    {# Bootstrap #}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    {# Custom CSS #}
    <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
    <style>
        .container{
            display: flex;
            justify-content: center;
            align-items: center;
        }
        .topbar {
            display: flex;
            background-color: var(--color-bg-contrast);
            height: 70px;
            width: 100%;
            margin-left: 0.5%;
            margin-right: 0.5%;
            align-items: center;
            justify-content: end;
            border-radius: 10px;
        }

        .left {
            margin-left: 0.5%;
        }

        .right {
            display: flex;
            width: 99%;
            margin-left: 0.5%;
            margin-right: 0.5%;
            justify-content: end;
            border-radius: 10px;
        }

        .logo {
            font-size: 50px;
        }

        .topbar_button {
            margin-right: 2vw;
        }

        .topbar_button.active {
            background-color: var(--color-bg-contrast);
            color: var(--color-text);
        }
    </style>

    {% block head %}{% endblock %}
</head>

<body>
    <div class="topbar">
        <div class="left">
            <i class="accent-text logo">ShopMe</i>
        </div>
        <div class="right">
            <button
                    class="topbar_button {% if app.request.get('_route') == 'login' or app.request.get('_route') == '' %} active{% endif %}"
                    onclick="window.location.href='{{ path('login') }}'"
                    role="button">
                <b class="fas fa-home"> Login</b>
            </button>
            <button
                    class="topbar_button {% if app.request.get('_route') == 'register' %} active{% endif %}"
                    onclick="window.location.href='{{ path('register') }}'"
                    role="button"
            >
                <b class="fas fa-search"> Register</b>
            </button>
        </div>
    </div>

    <div class="container">
        {% block body %}{% endblock %}
    </div>
</body>
</html>
