{% extends 'base.html.twig' %}

{% block title %}ShopMe - Home{% endblock %}

{% block body %}
    <div class="space-between">
        <h1>Welcome to <i class="accent-text">ShopMe</i></h1>
        <h6 class="green-text">Best shopping platform</h6>
    </div>

    {% if sales.sales is not empty %}
        <h2>Past Orders</h2>
        <table class="table table-dark table-striped">
            <thead>
            <tr>
                <th>Sale ID</th>
                <th>Date</th>
                <th>Product</th>
                <th>Description</th>
                <th>Quantity</th>
                <th>Price (each)</th>
                <th>Subtotal</th>
            </tr>
            </thead>
            <tbody>
            {% for sale in sales.sales %}
                <tr>
                    <td>{{ sale.saleId }}</td>
                    <td>{{ sale.createdAt }}</td>
                    <td>{{ sale.productTitle }}</td>
                    <td>{{ sale.description }}</td>
                    <td>{{ sale.quantity }}</td>
                    <td>${{ sale.price|number_format(2, '.', ',') }}</td>
                    <td>${{ (sale.price * sale.quantity)|number_format(2, '.', ',') }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="text-end mt-3">
            <strong>Total Spent:</strong> ${{ sales.totalPrice|number_format(2, '.', ',') }}
        </div>
    {% else %}
        <div class="center-div">
            <h2>
                No purchases yet. Give it a try !
            </h2>
        </div>
    {% endif %}
{% endblock %}