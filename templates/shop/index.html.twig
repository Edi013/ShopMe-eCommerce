{% extends 'base.html.twig' %}

{% block title %}Shop â€“ ShopMe{% endblock %}

{% block body %}
    <div class="center-div m-2">
        <form action="{{ path('shop') }}" method="get" class="search-input">
            <div>

            <input type="text" name="q" placeholder="Search products" value="{{ searchTerm }}">
            <button type="submit">
                <i class="fas fa-search"></i>
            </button>
            </div>
        </form>
    </div>

    <div class="product-list">
        {% for item in shopItems %}
            <div class="card bg-dark text-white">

            </div>
            <div class="card bg-dark text-white">
                <div class="card-body">
                    <h5 class="card-title">
                        {{ item.title }}
                    </h5>
                    <p class="card-text">
                        <div>
                            {{ item.description }}
                        </div>
                        <div class="align-right">
                            ${{ item.price }}
                        </div>

                        {% if item.stock >= 1 %}
                            <p class='green-text'>In stock</p>
                        {% else %}
                            <p class='red-text'>Out of stock</p>
                        {% endif %}
                    </p>
                    <div class="space-between">
                        <a href="#" class="btn btn-outline-light">Details</a>
                        <button class="btn btn-outline-light add-to-cart" data-product-id="{{ item.id }}">
                            <i class="fas fa-shopping-cart"></i> Add to cart
                        </button>
                    </div>
                </div>
            </div>
        {% else %}
            <div class='center-div'>
                <h4 class="">No products found matching "{{ searchTerm }}".</h4>
            </div>
        {% endfor %}
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            document.querySelectorAll('.add-to-cart').forEach(button => {
                button.addEventListener('click', async (event) => {
                    event.preventDefault();

                    const productId = button.getAttribute('data-product-id');

                    const response = await fetch('/add-to-cart', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/x-www-form-urlencoded'
                        },
                        body: new URLSearchParams({
                            product_id: productId,
                            quantity: 1
                        })
                    });

                    if (response.ok) {
                        alert('Added to cart!');
                    } else {
                        alert('Failed to add to cart.');
                    }
                });
            });
        });
    </script>


    <style>
    .search-input{
        width: 80%;
        display:flex;
        justify-content: center;
    }
    .search-input div{
        width:100%;
    }
    .search-input input{
        width:80%;
    }
    .search-input button{
        min-width: 7%;
        width: 15%;
        max-width:15%;
    }

    .card{
        display:flex;
        justify-content: center;
        margin-right: 5%;
        margin-left: 5%;
        margin-top: 10px;
    }

    .align-right{
        display: flex;
        justify-content: end;
    }
</style>
{% endblock %}