<div class="topbar">
    <div class="left">
        <i class="accent-text logo">ShopMe</i>
    </div>
    <div class="right">
        {% if is_admin() %}
        <button
                class="topbar_button {% if app.request.get('_route') == 'products' or
                    app.request.get('_route') == '' %} active{% endif %}"
                onclick="window.location.href='{{ path('products') }}'"
                role="button">
            <b class="fas fa-cubes"> Products</b>
        {% endif %}

        </button>
        <button
                class="topbar_button {% if app.request.get('_route') == 'home' or
                    app.request.get('_route') == '' %} active{% endif %}"
                onclick="window.location.href='{{ path('home') }}'"
                role="button">
            <b class="fas fa-home"> Home</b>
        </button>
        <button
                class="topbar_button {% if app.request.get('_route') == 'shop' %} active{% endif %}"
                onclick="window.location.href='{{ path('shop') }}'"
                role="button"
        >
            <b class="fas fa-search"> Shop</b>
        </button>
        <button
                class="topbar_button {% if app.request.get('_route') == 'cart' %} active{% endif %}"
                onclick="window.location.href='{{ path('cart') }}'"
                role="button"
        >
            <b class="fas fa-shopping-cart"> Cart</b>
        </button>
        <button
                onclick="window.location.href='{{ path('logout') }}'"
                role="button"
        >
            <b class="fas fa-sign-out"> Logout</b>
        </button>
    </div>
</div>


<style>
    .topbar {
        display: flex;
        background-color: var(--color-bg-contrast);
        height: 70px;
        width: 99%;
        margin-left: 0.5%;
        margin-right: 0.5%;
        align-items: center;
        justify-content: end;
        border-radius: 10px;
    }

    .left {
        margin-left: 0.5%;
    }

    .right {
        display: flex;
        width: 99%;
        margin-left: 0.5%;
        margin-right: 0.5%;
        justify-content: end;
        border-radius: 10px;
    }

    .logo{
        font-size: 50px;
    }

    .topbar_button {
        margin-right: 2vw;
    }
    .topbar_button.active {
        background-color: var(--color-bg-contrast) ;
        color: var(--color-text);
    }
</style>